cd /
pacman -Q > pacQ.lst
pacman -Qm > pacQm.lst
pacman -Qqe > pacQqe.lst
mount /dev/sda3 /mnt
cd /mnt/\@manjaro
rsync -r --del /boot/ \@/boot/
btrfs subvolume snapshot -r \@home \@home.$(date +%Y-v%W-%u-%A-%H.%M.%S)
btrfs subvolume snapshot -r \@ \@root.$(date +%Y-v%W-%u-%A-%H.%M.%S)
cd
umount /mnt
